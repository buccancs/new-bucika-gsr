<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.AboutActivity">

    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            app:titleTextColor="?attr/colorOnPrimary"
            app:subtitleTextColor="?attr/colorOnPrimary"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_multisensor_idle"
                                app:tint="?attr/colorPrimary"/>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Multi-Sensor Recording"
                                    android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                    android:textStyle="bold"/>

                            <TextView
                                    android:id="@+id/appVersionText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Version 0.1.0-beta (1)"
                                    android:textAppearance="?attr/textAppearanceBodyMedium"
                                    android:textColor="?attr/colorOnSurfaceVariant"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/appDescriptionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="A complete data collection system for multi-sensor research applications, featuring synchronized recording of camera, thermal, and physiological sensor data."
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                        <TextView
                                android:id="@+id/buildTypeText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Build: debug"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                                android:id="@+id/buildTimeText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Built: Unknown"
                                android:textAppearance="?attr/textAppearanceBodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="System Information"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/refreshSystemInfoButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refresh"
                                app:icon="@drawable/ic_refresh"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp">

                        <TextView
                                android:id="@+id/androidVersionText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Android --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/deviceModelText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Device: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/deviceBoardText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Board: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/deviceArchitectureText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Architecture: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/kernelVersionText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Kernel: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/javaVersionText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Java: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hardware Specifications"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="12dp">

                        <TextView
                                android:id="@+id/totalMemoryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total RAM: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/availableMemoryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Available RAM: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/totalStorageText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total Storage: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/availableStorageText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Available Storage: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/processorInfoText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Processor: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/screenResolutionText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Screen: --"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                        <TextView
                                android:id="@+id/screenDensityText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Density: -- DPI"
                                android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    </LinearLayout>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Camera Information"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/cameraInfoText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Camera information unavailable"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Available Sensors"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/sensorInfoText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sensor information unavailable"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Links &amp; Support"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/githubLinkButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="GitHub"
                                app:icon="@drawable/ic_folder_open"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/documentationLinkButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="Docs"
                                app:icon="@drawable/ic_info"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/supportEmailButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Support"
                                app:icon="@drawable/ic_upload"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/licenseLinkButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="License"
                                app:icon="@drawable/ic_info"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/privacyPolicyButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Privacy"
                                app:icon="@drawable/ic_info"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Legal Information"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/copyrightText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="© 2025 Multi-Sensor Recording System\nAll rights reserved"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <TextView
                            android:id="@+id/licenseText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="This project is licensed under the Apache License 2.0\nSee LICENSE file for details"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Third-party Libraries"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/thirdPartyLicensesText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="No third-party licenses to display"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Credits &amp; Acknowledgments"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/developersText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Development Team:\n• buccancs - Lead Developer"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <TextView
                            android:id="@+id/contributorsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Special thanks to all contributors"
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                    <TextView
                            android:id="@+id/acknowledgementsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text=""
                            android:textAppearance="?attr/textAppearanceBodyMedium"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>