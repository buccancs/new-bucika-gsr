<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.DevicesActivity">

    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/md_theme_primary"
            app:titleTextColor="@color/md_theme_on_primary"
            app:subtitleTextColor="@color/md_theme_on_primary"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/refreshAllButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Refresh All Devices"
                    app:icon="@drawable/ic_refresh"/>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/pcStatusIndicator"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_computer"
                                app:tint="?attr/colorError"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="PC Connection"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/pcStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PC Disconnected"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorError"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/pcDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Not connected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/pcConnectButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Connect PC"
                                app:icon="@drawable/ic_connect"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/testPcButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Test"
                                app:icon="@drawable/ic_diagnostic"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/shimmerStatusIndicator"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_shimmer"
                                app:tint="?attr/colorError"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Shimmer Device"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/shimmerStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shimmer Disconnected"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorError"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/shimmerDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Not connected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/shimmerConnectButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="Connect Shimmer"
                                app:icon="@drawable/ic_connect"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/shimmerConfigButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="Config"
                                app:icon="@drawable/ic_settings"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/testShimmerButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Test"
                                app:icon="@drawable/ic_diagnostic"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/thermalStatusIndicator"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_thermostat"
                                app:tint="?attr/colorError"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Thermal Camera"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/thermalStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thermal Disconnected"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorError"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/thermalDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Not connected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/thermalConnectButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Connect Thermal"
                                app:icon="@drawable/ic_connect"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/testThermalButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Test"
                                app:icon="@drawable/ic_diagnostic"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/networkStatusIndicator"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_network"
                                app:tint="?attr/colorError"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Network Connection"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/networkStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Network Disconnected"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorError"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/networkDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Not connected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/networkConnectButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="Connect Network"
                                app:icon="@drawable/ic_connect"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/networkConfigButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:text="Config"
                                app:icon="@drawable/ic_settings"/>

                        <com.google.android.material.button.MaterialButton
                                android:id="@+id/testNetworkButton"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Test"
                                app:icon="@drawable/ic_diagnostic"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:id="@+id/gsrStatusIndicator"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_sensors"
                                app:tint="?attr/colorError"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="GSR Sensor"
                                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/gsrStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GSR Disconnected"
                                android:textAppearance="?attr/textAppearanceBodyMedium"
                                android:textColor="?attr/colorError"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/gsrDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Not connected"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Configuration"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/generalSettingsButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="General Settings"
                            app:icon="@drawable/ic_settings"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test Results"
                            android:textAppearance="?attr/textAppearanceHeadlineSmall"
                            android:textStyle="bold"/>

                    <TextView
                            android:id="@+id/testResultsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="No test results available"
                            android:textAppearance="?attr/textAppearanceBodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="monospace"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>