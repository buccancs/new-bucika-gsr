<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:clipChildren="false"
        tools:context=".ui.DiagnosticsActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/elevation_card">

        <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:title="System Diagnostics"
                app:titleTextColor="?attr/colorOnPrimary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/content_padding">

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/systemHealthCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/elevation_card"
                    app:cardCornerRadius="@dimen/corner_radius_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_padding">

                    <TextView
                            android:id="@+id/systemStatusTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="System Status"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.chip.ChipGroup
                            android:id="@+id/healthStatusChips"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            app:chipSpacingHorizontal="@dimen/spacing_small"
                            app:layout_constraintTop_toBottomOf="@id/systemStatusTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.chip.Chip
                                android:id="@+id/cpuStatusChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU: Normal"
                                style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                                android:id="@+id/memoryStatusChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Memory: OK"
                                style="@style/Widget.Material3.Chip.Filter"/>

                        <com.google.android.material.chip.Chip
                                android:id="@+id/storageStatusChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Storage: Available"
                                style="@style/Widget.Material3.Chip.Filter"/>

                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                            android:id="@+id/performanceLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:text="Performance Metrics"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            app:layout_constraintTop_toBottomOf="@id/healthStatusChips"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                            android:id="@+id/performanceDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="• Frame Rate: 30 FPS\n• Data Rate: 1.2 MB/s\n• Network Latency: &lt; 50ms"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            app:layout_constraintTop_toBottomOf="@id/performanceLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/runDiagnosticsButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/touch_target_min"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:text="Run Tests"
                            app:icon="@drawable/ic_diagnostic"
                            style="@style/Widget.Material3.Button"
                            app:layout_constraintTop_toBottomOf="@id/performanceDetails"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/exportLogsButton"
                            app:layout_constraintWidth_percent="0.48"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/exportLogsButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/touch_target_min"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="Export Logs"
                            app:icon="@drawable/ic_export"
                            style="@style/Widget.Material3.Button.TonalButton"
                            app:layout_constraintTop_toBottomOf="@id/performanceDetails"
                            app:layout_constraintStart_toEndOf="@id/runDiagnosticsButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.48"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/networkCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_spacing"
                    app:cardElevation="@dimen/elevation_card"
                    app:cardCornerRadius="@dimen/corner_radius_card"
                    app:layout_constraintTop_toBottomOf="@id/systemHealthCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_padding">

                    <TextView
                            android:id="@+id/networkTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Network Diagnostics"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                            android:id="@+id/networkDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:text="• Connection Status: Connected\n• Signal Strength: Strong\n• Data Transfer Rate: 2.1 MB/s"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            app:layout_constraintTop_toBottomOf="@id/networkTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/testNetworkButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/touch_target_min"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:text="Test Network Connection"
                            app:icon="@drawable/ic_network"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:layout_constraintTop_toBottomOf="@id/networkDetails"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_spacing"
                    app:cardElevation="@dimen/elevation_card"
                    app:cardCornerRadius="@dimen/corner_radius_card"
                    app:layout_constraintTop_toBottomOf="@id/networkCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/card_padding">

                    <TextView
                            android:id="@+id/deviceInfoTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Device Information"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                            android:id="@+id/deviceInfoDetails"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:text="• Android Version: 13\n• RAM: 8 GB\n• Storage: 256 GB\n• Camera: 48 MP"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            app:layout_constraintTop_toBottomOf="@id/deviceInfoTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/systemInfoButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/touch_target_min"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_xs"
                            android:text="System Info"
                            app:icon="@drawable/ic_info"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:layout_constraintTop_toBottomOf="@id/deviceInfoDetails"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/clearCacheButton"
                            app:layout_constraintWidth_percent="0.48"/>

                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/clearCacheButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/touch_target_min"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:text="Clear Cache"
                            app:icon="@drawable/ic_clear"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:layout_constraintTop_toBottomOf="@id/deviceInfoDetails"
                            app:layout_constraintStart_toEndOf="@id/systemInfoButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintWidth_percent="0.48"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>