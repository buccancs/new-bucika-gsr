<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.fragments.DevicesFragment">

    <TextView
            android:id="@+id/devicesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Device Management"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/connectDevicesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Connect All Devices"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button"
            app:layout_constraintTop_toBottomOf="@id/devicesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/scanDevicesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Scan for Devices"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/connectDevicesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/refreshDevicesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Refresh Status"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:layout_constraintTop_toBottomOf="@id/scanDevicesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/statusSectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Device Status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/refreshDevicesButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/pcConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PC: Disconnected"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="@color/md_theme_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/statusSectionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/shimmerConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Shimmer: Disconnected"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="@color/md_theme_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/pcConnectionStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/thermalConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thermal: Disconnected"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="@color/md_theme_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/shimmerConnectionStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/networkConnectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Network: Disconnected"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:padding="12dp"
            android:background="@color/md_theme_surface_variant"
            app:layout_constraintTop_toBottomOf="@id/thermalConnectionStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>