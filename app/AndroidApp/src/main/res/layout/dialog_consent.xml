<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/consent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Research Data Collection Consent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/consent_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/data_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_rights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Options (Optional)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkbox_anonymization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable data anonymization (recommended)"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkbox_face_blurring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blur faces in video recordings (disabled - hands-only video)"
            android:checked="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <CheckBox
            android:id="@+id/checkbox_understand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I understand and agree to the data collection and processing described above"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>