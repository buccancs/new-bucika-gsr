<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginHorizontal="40dp"
    android:id="@+id/cl_new_version"
    android:visibility="gone"
    tools:visibility="visible"
    android:background="@drawable/bg_new_version">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_new_version_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/new_version_update"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_new_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:drawableLeft="@drawable/bg_circle"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_img_calibration_right"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        android:drawableRight="@drawable/ic_right_arrow"
        tools:text="版本2.00.003" />


</androidx.constraintlayout.widget.ConstraintLayout>