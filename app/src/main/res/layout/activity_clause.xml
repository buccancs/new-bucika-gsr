<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16131e"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/clause_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/welcome_use_app"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clause_img" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/set_version"
        android:textColor="@color/temp_font_title_item_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome" />

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="28dp"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/bg_corners05_solid_9e9e9e"
        android:scrollbars="vertical"
        android:text="@string/privacy_agreement_tips_new"
        android:textColor="@color/white"
        android:textSize="@dimen/app_small_font"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/clause_item"
        app:layout_constraintTop_toBottomOf="@id/tv_version"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/clause_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:textColor="@color/lms_color_333"
        android:textSize="@dimen/app_small_font"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/clause_img"
        app:layout_constraintStart_toStartOf="@id/clause_img"
        app:layout_constraintTop_toBottomOf="@id/clause_img" />


    <TextView
        android:id="@+id/clause_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:padding="4dp"
        android:text="@string/user_services_agreement"
        android:textColor="@color/color_img_calibration_right"
        android:textSize="@dimen/app_small_font"
        app:layout_constraintBottom_toTopOf="@id/clause_item2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/clause_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:padding="4dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/color_img_calibration_right"
        android:textSize="@dimen/app_small_font"
        app:layout_constraintBottom_toTopOf="@id/clause_item3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/clause_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:lineSpacingMultiplier="1.2"
        android:padding="4dp"
        android:text="@string/third_party_components"
        android:textColor="@color/color_img_calibration_right"
        android:textSize="@dimen/app_small_font"
        app:layout_constraintBottom_toTopOf="@id/tv_um"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_um"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="@dimen/app_small_font"
        app:layout_constraintBottom_toTopOf="@id/clause_year_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/text_p_umeng"
        />

    <Button
        android:id="@+id/clause_disagree_btn"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_corners05_solid_15_ff"
        android:text="@string/clause_disagree"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/app_font"
        app:layout_constraintEnd_toStartOf="@id/clause_agree_btn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clause_agree_btn" />

    <Button
        android:id="@+id/clause_agree_btn"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/bg_corners05_solid_theme"
        android:text="@string/clause_submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/app_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/clause_disagree_btn" />


    <TextView
        android:id="@+id/clause_year_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:textColor="#64ffffff"
        android:textSize="@dimen/app_small_font"
        tools:text="Copyright %s2023-2024 %s公司名 Technology Co.,Ltd.\nAll Rights Reserved."
        app:layout_constraintBottom_toTopOf="@id/clause_agree_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>