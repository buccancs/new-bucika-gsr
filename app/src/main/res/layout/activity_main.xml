<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BucikaGSR"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@color/bucika_primary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thermal Infrared &amp; GSR Monitoring"
        android:textSize="18sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnGSR"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/gsr_title"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button" />

    <Button
        android:id="@+id/btnThermal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/thermal_title"
        android:layout_marginBottom="16dp"
        style="@style/Widget.Material3.Button" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/settings"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>