<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:background="@drawable/bg_corners10_solid_3b3e44">

    <RelativeLayout
        android:id="@+id/rl_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="28dp"
        android:paddingBottom="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/svg_x_cc"
            android:contentDescription="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/color_board"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rl_close"
        app:layout_constraintBottom_toBottomOf="@id/rl_close" />

    <com.topdon.lib.core.view.ColorSelectView
        android:id="@+id/color_select_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rl_close" />

    <!-- 目前原型UI为6个预设值，更改的概率不大，此处直接写死，就不用 RecyclerView、自定义View 之类的去复杂化了 -->
    <View
        android:id="@+id/view_color1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_0000ff"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/color_select_view"
        app:layout_constraintStart_toStartOf="@id/color_select_view"
        app:layout_constraintEnd_toStartOf="@+id/view_color2" />
    <View
        android:id="@+id/view_color2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_ff0000"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_color1"
        app:layout_constraintStart_toEndOf="@id/view_color1"
        app:layout_constraintEnd_toStartOf="@+id/view_color3" />
    <View
        android:id="@+id/view_color3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_00ff00"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_color1"
        app:layout_constraintStart_toEndOf="@id/view_color2"
        app:layout_constraintEnd_toStartOf="@+id/view_color4" />
    <View
        android:id="@+id/view_color4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_ffff00"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_color1"
        app:layout_constraintStart_toEndOf="@id/view_color3"
        app:layout_constraintEnd_toStartOf="@+id/view_color5" />
    <View
        android:id="@+id/view_color5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_000000"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_color1"
        app:layout_constraintStart_toEndOf="@id/view_color4"
        app:layout_constraintEnd_toStartOf="@+id/view_color6" />
    <View
        android:id="@+id/view_color6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="5dp"
        android:background="@drawable/selector_color_pick_ffffff"
        app:layout_constraintWidth_percent="0.09"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/view_color1"
        app:layout_constraintStart_toEndOf="@id/view_color5"
        app:layout_constraintEnd_toEndOf="@id/color_select_view" />

    <TextView
        android:id="@+id/tv_size_title"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_color1"
        android:textColor="@color/white"
        android:text="@string/text_size"
        />
    <TextView
        android:id="@+id/tv_save"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="@string/person_save"
        android:textSize="16sp"
        android:textColor="#55272F"
        android:background="@drawable/bg_corners05_solid_theme"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="235:44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_size_title" />

</androidx.constraintlayout.widget.ConstraintLayout>