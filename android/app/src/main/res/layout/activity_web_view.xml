<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WebViewActivity">

        <com.github.lzyzsd.jsbridge.BridgeWebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/view_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16131e" />

        <!-- 加载失败错误页面 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16131e"
            android:visibility="gone">
            <com.topdon.lib.core.view.TitleView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:titleText="@string/testing_guidance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/iv_error_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_web_view_error"
                android:contentDescription="@null"
                app:layout_constraintVertical_bias="0.38"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <TextView
                android:id="@+id/tv_error_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_failed_hint"
                android:textSize="14sp"
                android:textColor="#80ffffff"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_error_icon" />
            <TextView
                android:id="@+id/tv_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:paddingVertical="6dp"
                android:paddingHorizontal="23dp"
                android:text="@string/app_error_reload"
                android:textSize="14sp"
                android:textColor="#55272F"
                android:background="@drawable/bg_corners05_solid_theme"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_error_tips" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>