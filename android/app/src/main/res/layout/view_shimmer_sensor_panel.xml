<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Shimmer Sensor Configuration Panel -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shimmer Sensor Configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                android:drawableStart="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp" />

            <!-- Sampling Rate Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sampling Rate:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_sampling_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minWidth="120dp" />

            </LinearLayout>

            <!-- Sensors Enable/Disable -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Enabled Sensors:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch_gsr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GSR (Galvanic Skin Response)"
                    android:textSize="14sp"
                    android:checked="true" />

                <Switch
                    android:id="@+id/switch_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skin Temperature"
                    android:textSize="14sp"
                    android:checked="true" />

                <Switch
                    android:id="@+id/switch_ppg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PPG (Photoplethysmography)"
                    android:textSize="14sp"
                    android:checked="false" />

                <Switch
                    android:id="@+id/switch_accelerometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accelerometer (Motion)"
                    android:textSize="14sp"
                    android:checked="false" />

            </LinearLayout>

            <!-- GSR Range Configuration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GSR Range:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_gsr_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minWidth="180dp" />

            </LinearLayout>

            <!-- Data Processing Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Data Processing:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Digital Filtering (Recommended)"
                    android:textSize="14sp"
                    android:checked="true" />

                <Switch
                    android:id="@+id/switch_calibration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-Calibration"
                    android:textSize="14sp"
                    android:checked="true" />

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_reset_defaults"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Reset Defaults"
                    android:backgroundTint="@android:color/darker_gray"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_apply_settings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Apply Settings"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Current Configuration Display -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Configuration:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />

            <TextView
                android:id="@+id/tv_current_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading configuration..."
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:padding="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>