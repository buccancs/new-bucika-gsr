<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_guide_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#16131e">

    <View
        android:id="@+id/view_bg_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"
        android:background="@drawable/bg_corners08_solid_ff"
        app:layout_constraintStart_toStartOf="@+id/iv_monitor"
        app:layout_constraintEnd_toEndOf="@id/iv_monitor"
        app:layout_constraintTop_toTopOf="@id/iv_monitor"
        app:layout_constraintBottom_toBottomOf="@+id/iv_monitor" />

    <View
        android:id="@+id/view_monitor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="150:112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:id="@+id/iv_monitor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/svg_monitor_select"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.048"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/view_monitor"
        app:layout_constraintEnd_toEndOf="@id/view_monitor"
        app:layout_constraintTop_toTopOf="@id/view_monitor"
        app:layout_constraintBottom_toTopOf="@+id/tv_monitor" />
    <TextView
        android:id="@+id/tv_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/app_font_11"
        app:layout_constraintStart_toStartOf="@id/view_monitor"
        app:layout_constraintEnd_toEndOf="@id/view_monitor"
        app:layout_constraintTop_toBottomOf="@id/iv_monitor"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/svg_home_guide_1_line"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.032"
        app:layout_constraintDimensionRatio="24:142"
        app:layout_constraintStart_toStartOf="@id/view_bg_white"
        app:layout_constraintEnd_toEndOf="@id/view_bg_white"
        app:layout_constraintBottom_toTopOf="@id/view_bg_white" />

    <View
        android:id="@+id/view_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="@id/iv_line"
        app:layout_constraintBottom_toTopOf="@id/iv_line" />

    <View
        android:id="@+id/view_bg_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_corners06_solid_theme"
        app:layout_constraintWidth_percent="0.74"
        app:layout_constraintStart_toEndOf="@id/iv_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_space"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tips"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:text="1/3"
        android:textSize="12sp"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="@id/view_bg_theme"
        app:layout_constraintEnd_toEndOf="@id/view_bg_theme"
        app:layout_constraintTop_toTopOf="@id/view_bg_theme" />
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="4dp"
        android:paddingBottom="18dp"
        android:text="@string/tc_guide_tips1"
        android:textSize="14sp"
        android:textColor="#55272F"
        app:layout_constraintStart_toStartOf="@id/view_bg_theme"
        app:layout_constraintEnd_toEndOf="@id/view_bg_theme"
        app:layout_constraintTop_toBottomOf="@id/tv_count" />

    <!-- 下一步 -->
    <TextView
        android:id="@+id/tv_next1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:text="@string/app_next"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners50_stroke_ff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_bg_theme" />

    <!-- 跳过 -->
    <TextView
        android:id="@+id/tv_skin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:text="@string/user_jump"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>