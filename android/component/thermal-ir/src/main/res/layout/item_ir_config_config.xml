<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="20dp"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_corners04_stroke_5b5961"
    tools:background="#16131e">

    <!-- 选中 -->
    <ImageView
        android:id="@+id/iv_selector"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:paddingStart="10dp"
        android:paddingEnd="16dp"
        android:paddingVertical="12dp"
        android:src="@drawable/selector_radio"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 删除 -->
    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="12dp"
        android:src="@drawable/svg_ir_config_del"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_selector" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:paddingVertical="12dp"
        android:textSize="12sp"
        android:textColor="#80ffffff"
        tools:text="自定义模式1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_del" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_name,iv_selector" />

    <!-- 环境温度 -->
    <TextView
        android:id="@+id/tv_temp_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="环境温度 (-10~55°C)"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_temp_bg" />
    <TextView
        android:id="@+id/space_temp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_temp_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_temp_title" />
    <View
        android:id="@+id/view_temp_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_corners06_solid_626569"
        app:layout_constraintDimensionRatio="82:36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/space_temp_title"
        app:layout_constraintBottom_toBottomOf="@id/space_temp_title" />
    <TextView
        android:id="@+id/tv_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="25.00"
        app:layout_constraintStart_toStartOf="@id/view_temp_bg"
        app:layout_constraintTop_toTopOf="@id/view_temp_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_temp_bg" />
    <TextView
        android:id="@+id/tv_temp_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="°C"
        app:layout_constraintEnd_toEndOf="@id/view_temp_bg"
        app:layout_constraintTop_toTopOf="@id/view_temp_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_temp_bg" />

    <!-- 测温距离 -->
    <TextView
        android:id="@+id/tv_dis_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="测温距离 (0.2m~5m)"
        app:layout_constraintTop_toBottomOf="@id/tv_temp_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view_dis_bg" />
    <TextView
        android:id="@+id/space_dis_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_dis_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_dis_title" />
    <View
        android:id="@+id/view_dis_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_corners06_solid_626569"
        app:layout_constraintDimensionRatio="82:36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/space_dis_title"
        app:layout_constraintBottom_toBottomOf="@id/space_dis_title" />
    <TextView
        android:id="@+id/tv_dis_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="0.25"
        app:layout_constraintStart_toStartOf="@id/view_dis_bg"
        app:layout_constraintTop_toTopOf="@id/view_dis_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_dis_bg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="m"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:ignore="HardcodedText"
        app:layout_constraintEnd_toEndOf="@id/view_dis_bg"
        app:layout_constraintTop_toTopOf="@id/view_dis_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_dis_bg" />

    <!-- 发射率 -->
    <TextView
        android:id="@+id/tv_em_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        tools:text="发射率 (0.01~1.00)"
        app:layout_constraintTop_toBottomOf="@id/tv_dis_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_em_value" />
    <TextView
        android:id="@+id/space_em_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_em_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_em_title" />
    <TextView
        android:id="@+id/tv_em_value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="10dp"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_corners06_solid_626569"
        tools:text="0.99"
        app:layout_constraintDimensionRatio="82:36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/space_em_title"
        app:layout_constraintBottom_toBottomOf="@id/space_em_title" />

</androidx.constraintlayout.widget.ConstraintLayout>