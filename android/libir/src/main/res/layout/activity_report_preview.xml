<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_16131E">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/lay_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="enterAlways">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:id="@+id/rly_header_image"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/iv_header_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/lay_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp">

                        <View
                            android:id="@+id/system_bar_view"
                            android:layout_width="match_parent"
                            android:layout_height="50dp" />

                        <ImageView
                            android:id="@+id/toolbar_back_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@id/system_bar_view"
                            android:adjustViewBounds="true"
                            android:gravity="start|center_vertical"
                            android:padding="8dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_back_white_svg" />

                        <TextView
                            android:id="@+id/toolbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_below="@id/system_bar_view"
                            android:layout_marginStart="12dp"
                            android:layout_toRightOf="@+id/toolbar_back_img"
                            android:gravity="center_vertical"
                            android:text="@string/app_detection"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_scrollFlags="scroll">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_address_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_23202E"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_report_address"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            tools:text="深圳市南山区前海街道" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_house_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        tools:text="豪华大别墅" />

                    <TextView
                        android:id="@+id/tv_detect_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/color_B3FFFFFF"
                        android:textSize="12sp"
                        tools:text="检测时间：2024-7-30 08:19" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_inspector"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="Jacky" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/color_B3FFFFFF"
                                android:textSize="13sp"
                                android:text="@string/inspector_name" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="16dp"
                            android:background="#26ffffff" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_build_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="2028年" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/color_B3FFFFFF"
                                android:textSize="13sp"
                                android:text="@string/year_built" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="120㎡" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/color_B3FFFFFF"
                                android:textSize="13sp"
                                android:text="@string/area" />

                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="16dp"
                            android:background="#26ffffff" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:text="$1999" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/color_B3FFFFFF"
                                android:textSize="13sp"
                                android:text="@string/detection_cost" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:background="@color/color_16131E"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcy_floor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_report_floor" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="20dp"
                        app:layout_optimizationLevel="none">
                        <TextView
                            android:id="@+id/tv_sign_title_inspector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/inspector_signature"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/tv_sign_title_owner" />
                        <TextView
                            android:id="@+id/tv_sign_title_owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/house_owner_signature"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_sign_title_inspector"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/barrier_sign_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:barrierDirection="bottom"
                            app:constraint_referenced_ids="tv_sign_title_inspector,tv_sign_title_owner" />

                        <RelativeLayout
                            android:id="@+id/rly_inspector_signature"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/bg_corners06_solid_10_ff"
                            app:layout_constraintStart_toStartOf="@id/tv_sign_title_inspector"
                            app:layout_constraintEnd_toEndOf="@id/tv_sign_title_inspector"
                            app:layout_constraintTop_toBottomOf="@id/barrier_sign_title">
                            <ImageView
                                android:id="@+id/iv_inspector_signature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rly_house_owner_signature"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:background="@drawable/bg_corners06_solid_10_ff"
                            app:layout_constraintStart_toStartOf="@id/tv_sign_title_owner"
                            app:layout_constraintEnd_toEndOf="@id/tv_sign_title_owner"
                            app:layout_constraintTop_toTopOf="@id/rly_inspector_signature">
                            <ImageView
                                android:id="@+id/iv_house_owner_signature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/ll_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_23202E"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#322F38" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/bg_gradient_e74380_ffba42_redius_10"
            android:gravity="center"
            android:text="@string/finalize_and_save"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>