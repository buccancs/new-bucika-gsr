<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_16131E"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        >
        <!-- 温度图层 -->
        <com.infisense.usbir.view.TemperatureView
            android:id="@+id/temperature_view"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
        <!-- 双光融合图层 native camera use -->
        <SurfaceView
            android:id="@+id/dualTextureViewNativeCamera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/fps_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:layout_gravity="center"
            android:textColor="@color/lms_red"
            android:textSize="16sp" />
    </FrameLayout>

</RelativeLayout>
