<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.topdon.bucika.pc.ui.MainController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- Title Bar -->
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bucika GSR Orchestrator" />
         </HBox>
         
         <!-- Session Info -->
         <HBox alignment="CENTER_LEFT" spacing="20.0">
            <Label fx:id="sessionLabel" text="No active session" />
            <Label fx:id="sessionStateLabel" text="State: Idle" />
            <Label fx:id="elapsedTimeLabel" text="Elapsed: --:--" />
         </HBox>
         
         <!-- Control Buttons -->
         <HBox spacing="10.0">
            <Button fx:id="newSessionBtn" text="New Session" />
            <Button fx:id="armSessionBtn" text="Arm Session" />
            <Button fx:id="startRecordingBtn" text="Start Recording" />
            <Button fx:id="syncMarkBtn" text="Sync Mark" />
            <Button fx:id="stopRecordingBtn" text="Stop Recording" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshDevicesBtn" text="Refresh Devices" />
         </HBox>
         
         <Separator />
      </VBox>
   </top>
   
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL">
         
         <!-- Devices Table -->
         <VBox spacing="5.0">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            
            <Label style="-fx-font-weight: bold;" text="Connected and Discovered Devices" />
            
            <TableView fx:id="devicesTable">
               <columns>
                  <TableColumn fx:id="deviceIdColumn" prefWidth="120.0" text="Device ID" />
                  <TableColumn fx:id="deviceNameColumn" prefWidth="150.0" text="Device Name" />
                  <TableColumn fx:id="batteryColumn" prefWidth="80.0" text="Battery" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="capabilitiesColumn" prefWidth="200.0" text="Capabilities" />
               </columns>
               
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </VBox>
         
         <!-- Status Log -->
         <VBox spacing="5.0">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </padding>
            
            <Label style="-fx-font-weight: bold;" text="Status Log" />
            
            <TextArea fx:id="statusTextArea" editable="false" prefHeight="200.0" wrapText="true">
               <VBox.vgrow>
                  <Priority fx:constant="ALWAYS" />
               </VBox.vgrow>
            </TextArea>
         </VBox>
         
      </SplitPane>
   </center>
</BorderPane>