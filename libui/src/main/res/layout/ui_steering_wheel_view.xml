<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/steering_wheel_start_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_steering_wheel_start"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.25" />

    <ImageView
        android:id="@+id/steering_wheel_center_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_steering_wheel_center"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/steering_wheel_start_btn"
        app:layout_constraintEnd_toStartOf="@id/steering_wheel_end_btn" />
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/app_font"
        app:layout_constraintBottom_toBottomOf="@id/steering_wheel_center_btn"
        app:layout_constraintEnd_toEndOf="@id/steering_wheel_center_btn"
        app:layout_constraintStart_toStartOf="@id/steering_wheel_center_btn"
        app:layout_constraintTop_toTopOf="@id/steering_wheel_center_btn" />

    <ImageView
        android:id="@+id/steering_wheel_end_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_steering_wheel_end"
        android:contentDescription="@null"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>