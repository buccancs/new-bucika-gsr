<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/ripple_white_bg"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="0dp">

    <ImageView
        android:id="@+id/item_setting_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_setting_default_svg" />

    <TextView
        android:id="@+id/item_setting_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/font_color"
        android:textSize="@dimen/app_font_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_setting_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_setting_end_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/item_setting_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_setting_text"
        app:srcCompat="@drawable/ic_more_svg" />

    <View
        android:id="@+id/item_setting_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>