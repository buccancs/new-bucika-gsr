<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <!-- 背景 -->
        <View
            android:id="@+id/view_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:bgCorners="@{10}"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintDimensionRatio="343:60"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 延时拍照时长 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_delay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toStartOf="@id/view_bg"
            app:layout_constraintEnd_toStartOf="@+id/cl_auto">
            <ImageView
                android:id="@+id/iv_delay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/level_camera_delay"
                android:contentDescription="@null"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 自动快门 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_auto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toEndOf="@id/cl_delay"
            app:layout_constraintEnd_toStartOf="@+id/cl_shutter">
            <ImageView
                android:id="@+id/iv_auto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/selector_camera_auto"
                android:contentDescription="@null"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 手动快门 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shutter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toEndOf="@id/cl_auto"
            app:layout_constraintEnd_toStartOf="@+id/cl_audio">
            <ImageView
                android:id="@+id/iv_shutter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/selector_camera_shutter"
                android:contentDescription="@null"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 录音开关 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_audio"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toEndOf="@id/cl_shutter"
            app:layout_constraintEnd_toStartOf="@+id/cl_setting">
            <ImageView
                android:id="@+id/iv_audio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/selector_camera_audio"
                android:contentDescription="@null"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 更多设置 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_setting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/view_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bg"
            app:layout_constraintStart_toEndOf="@id/cl_audio"
            app:layout_constraintEnd_toEndOf="@id/view_bg">
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/svg_camera_setting"
                android:contentDescription="@null"
                app:layout_constraintWidth_percent="0.42"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>